%ul.breadcrumb
  %li
    %a{:href => products_path(@products)} Products
  %li.active edit product
= form_for @product, :html => {:multipart => true} do |f| 
  %p 
    = f.label :description, "description"
    = f.text_field :description
  %p= f.submit
%p= link_to "Back to Products", @products
