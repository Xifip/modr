h1= @current_product.name
= link_to 'New spin', new_spin_path
%table.table
  %tr
    %th Name
    %th Description
    %th{:colspan => "2"}
  - @spins.each do |spin|
    %tr
      %td= link_to spin.name, spin_path(spin)
      %td= spin.description
      %td= link_to 'Edit', edit_spin_path(spin)
      %td= link_to 'Destroy', spin_path(spin),             |
          method: :delete, data: { confirm: 'Are you sure?' } |
