!!! 5
- env = Rails.application.assets.is_a?(Sprockets::Index) ? Rails.application.assets.instance_variable_get('@environment') : Rails.application.assets
%html
  %head
    %title Modr
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = yield :javascript_includes
    = csrf_meta_tags
    /[if lt IE 9]
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
  %body
    .wrapper
      %nav.navbar.navbar-inverse.navbar-fixed-top{:role => "navigation"}
        .container-fluid
          .navbar-header
            %button.navbar-toggle.collapsed{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
              %span.sr-only Toggle navigation
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            %a.navbar-brand{:href => "#"} MODR
          #bs-example-navbar-collapse-1.collapse.navbar-collapse
            #logo.span2
              %a{:href => root_path}
            #loginmenu.span5
              %ul.nav.navbar-nav
                - if user_signed_in?
                  %li
                    = link_to "Products", products_path
                  %li
                    = link_to "Parts", parts_path
              %ul.nav.navbar-nav.navbar-right
                - if user_signed_in?
                  %li
                    = link_to current_user.email, edit_user_registration_path
                  %li
                    = link_to "Logout", destroy_user_session_path, { method: :delete, id: "sign_out" }
                - else
                  %li
                    = link_to "Sign up", new_user_registration_path
                  %li
                    = link_to "Login", new_user_session_path
      .container
        - flash.each do |key, value|
          = content_tag(:div, value, class: "alert alert-#{key}")
        = yield
