%ul.breadcrumb
  %li
    %a{:href => products_path} Products
  %li
    %a{:href => product_spins_path(@product)}= @product.name
  %li.active edit spin
= form_for [@product, @spin], :html => {:multipart => true} do |f| 
  %p 
    = f.label :description, "description"
    = f.text_field :description   
  %p= f.submit
%p= link_to "Back to " + @product.name + " spins", product_spins_path(@product)
